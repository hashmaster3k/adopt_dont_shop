<article class='all-shelters'>
  <% @shelters.each do |shelter| %>
    <div class='shelter-box' id="<%= shelter.id %>">

      <h3><%= link_to shelter.name, "/shelters/#{shelter.id}", :class => 'shelter-header' %></h3>

      <div class='shelter-buttons'>
        <%= button_to 'Update Shelter', "/shelters/#{shelter.id}/edit", method: :get, :class => 'shelter-button' %>
        <%= button_to 'Delete Shelter', "/shelters/#{shelter.id}", method: :delete, :class => 'shelter-button' %>
      </div>
    </div>
  <% end %>

  <div id='create-shelter-button'>
    <%= button_to 'CREATE NEW SHELTER', '/shelters/new', method: :get %>
  </div>

</article>
