<div class='page-title'>
  <h1>Add New Pet To Shelter</h1>
</div>
<article class="edit-info">
  <section class='edit-info-box'>
    <%= form_tag "/shelters/#{@shelter_id}/pets" do %>
      <%= label_tag 'Pet Name:' %><br>
      <%= text_field_tag :name %><br><br>

      <%= label_tag 'Approxamite age:' %><br>
      <%= text_field_tag :approx_age %><br><br>

      <%= label_tag 'Sex:' %>  <br>
      <%= text_field_tag :sex %><br><br>

      <%= label_tag 'Image:' %><br>
      <%= text_field_tag :image %><br><br>

      <%= label_tag 'Description:' %><br>
      <%= text_area_tag :description, nil, size:'16x5' %><br><br>

      <%= submit_tag 'Add Pet' %>
    <% end %>
  </section>
</article>
