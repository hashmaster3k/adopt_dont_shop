<article class='all-pets'>
  <% @pets.each do |pet| %>
    <section class='pet-box'>
        <%= link_to "/pets/#{pet.id}" do %>
          <%= image_tag pet.image, :class => 'pet-image'  %>
        <% end %>
      <div class='pet-info'>
        <h3><%= link_to pet.name, "/pets/#{pet.id}", :class => 'pet-link' %></h3>
        <ul>
          <li>Age: <%= pet.approx_age %></li>
          <li>Sex: <%= pet.sex %></li>
        </ul>
      </div>

      <div class='pet-buttons'>

      </div>
    </section>
  <% end %>
</article>
